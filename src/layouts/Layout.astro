---
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { SEO } from "astro-seo";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<SEO 
			title={title}
			charset="UTF-8"
			description="Never lose a book you've read again. Have your entire archive at your fingertips when giving advice to your loved ones!"
			openGraph={{
				basic: {
				  title: "Track Books on Your Read",
				  type: "website",
				  image: "https://github.com/sonatipek/track-the-books/assets/80075444/6030c2bd-3d59-452c-8d96-aafb3da392cc",
				}
			}}
			twitter={{
				card: "app",
				site: "@sonatipek",
				creator: "@sonatipek",
				title: "Track Books on Your Read",
				image: "https://github.com/sonatipek/track-the-books/assets/80075444/6030c2bd-3d59-452c-8d96-aafb3da392cc",
				description: "Never lose a book you've read again. Have your entire archive at your fingertips when giving advice to your loved ones!"

			}}
			extend={{
				link: [{rel: "icon", href:"/favicon.svg"}],
				meta: [
					{
						name: "twitter:image",
						content: "https://github.com/sonatipek/track-the-books/assets/80075444/6030c2bd-3d59-452c-8d96-aafb3da392cc"
					},
					{name: "twitter:title", content: "Track Books on Your Read"},
					{name: "twitter:description", content: "Never lose a book you've read again. Have your entire archive at your fingertips when giving advice to your loved ones!"},
					{name: "keywords", content: "track, books, on, your, read, sonatipek, track books on your read, book tracker"}
				],
			}}
		/>

		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
	</body>
</html>