---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Track Books on Your Read">
	<div class="px-4 pt-5 my-5 text-center border-bottom">
        <h1 class="display-4 fw-bold text-body-emphasis">Keep Track of What You Read</h1>
        <div class="col-lg-6 mx-auto">
          <p class="lead mb-4">Never lose a book you've read again. Have your entire archive at your fingertips when giving advice to your loved ones! </p>
          <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mb-5">
            <a href="/books" class="btn btn-success btn-lg px-4 me-sm-3">Add Book</a>
            <a target="_blank" href="https://trackthemovies.vercel.app/" class="btn btn-outline-success btn-lg px-4">Add Movie/Series</a>
          </div>
        </div>
        <div class="overflow-hidden" style="max-height: 45vh;">
          <div class="container px-5">
            <img src="https://github.com/sonatipek/track-the-books/assets/80075444/9785314f-96f9-45be-a6d1-ed11d138731d" class="img-fluid border rounded-3 shadow-lg mb-4" alt="add movie page" width="700" height="500" loading="lazy">
          </div>
        </div>
      </div>
</Layout>